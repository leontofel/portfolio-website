{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@atoms": [
        "./src/components/1_atoms"
      ],
      "@molecules": [
        "./src/components/2_molecules"
      ],
      "@organisms": [
        "./src/components/3_organisms"
      ],
      "@templates": [
        "./src/components/4_templates"
      ],
      "@screens": [
        "./src/components/5_screens"
      ],
      "@icons": [
        "./src/components/1_atoms/Icons"
      ],
      "@navigation": [
        "./src/navigation"
      ],
      "@context": [
        "./src/context"
      ],
      "@types": [
        "./src/types"
      ],
      "@redux": [
        "./src/redux"
      ],
      "@hooks": [
        "./src/hooks"
      ],
      "@utils": [
        "./src/utils"
      ], 
      "@assets": [
        "./assets/img"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
